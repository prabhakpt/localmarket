<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.grocerry.local.lokalegrocery.UserRegisterConfirmation">


    <TextView
        android:id="@+id/headerText"
        android:layout_width="353dp"
        android:layout_height="100dp"
        android:text="Pleaes Confirm Registration to start placing orders"
        android:textSize="20sp"
        tools:text="Pleaes Confirm Registration to start placing orders" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:text="User Name" />

    <EditText
        android:id="@+id/address"
        android:layout_width="360dp"
        android:layout_height="109dp"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="textMultiLine"
        android:text="Address" />

    <Button
        android:id="@+id/confirmRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12sp"
        android:text="Confirm Registration"
        android:textAlignment="center" />

</LinearLayout>
